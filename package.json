{
  "name": "zebtro-server",
  "version": "1.0.0",
  "description": "Rest api for zebtro URL shortner, written in typescript using express.",
  "main": "bin/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:db": "docker-compose -f docker-compose.dev.yaml up -d",
    "build": "tsc -p  tsconfig.json",
    "start": "node bin/server.js",
    "lint": "eslint --fix --ext .ts,.js .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Akshit8/dyte-task.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "url-shortner",
    "mongodb"
  ],
  "author": "Akshit Sadana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Akshit8/dyte-task/issues"
  },
  "homepage": "https://github.com/Akshit8/dyte-task#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^16.11.11",
    "@types/randomstring": "^1.1.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.14",
    "randomstring": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  }
}
