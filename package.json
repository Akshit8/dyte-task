{
  "name": "zebtro-server",
  "version": "1.0.0",
  "description": "Rest api for zebtro URL shortner, written in typescript using express.",
  "main": "bin/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p  tsconfig.json",
    "start": "node bin/index.js",
    "lint": "eslint --fix --ext .ts,.js ./src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Akshit8/dyte-task.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "url-shortner",
    "mongodb"
  ],
  "author": "Akshit Sadana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Akshit8/dyte-task/issues"
  },
  "homepage": "https://github.com/Akshit8/dyte-task#readme",
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "npm run format",
      "npm run lint",
      "git add ."
    ]
  }
}
